#!/bin/bash -e
if [ "$#" -eq 2 ]; then
  remote=$1
  pr=$2

  git checkout --detach
  git fetch $remote refs/pull/$pr/head:pr/$pr
  git checkout pr/$pr
elif [ "$#" -eq 3 ]; then
  remote=$1
  command=$2
  pr=$3

  if [ "$command" == "rebase" ]; then
    git fetch $remote pull/$pr/head
    git rebase FETCH_HEAD
  else
    echo "usage: $(basename $0) <remote> rebase <pull request #>"
    exit 1
  fi
else
  echo "usage: $(basename $0) <remote> <pull request #>"
  exit 1
fi
